   "source": [
    "# Convert .nrrd file from 3D slicer to a tiff stack\n",
    "# TO DO: Change values for below variables to match your .nrrd file input and tiff stack output locations\n",
    "fn = 'thecac_ftg_rf_220622.nrrd'\n",
    "inpath = 'data/THECAC/thecac_ftg_rf_220622/slicer'\n",
    "outpath = 'data/THECAC/thecac_ftg_rf_220622/slicer/ms/tiffs_py'\n",
    "nbits = '16'\n",
    "\n",
    "# Convert the .nrrd file and return the header for downstream ops\n",
    "header = convert_nrrd(fn, inpath, outpath)"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Make new Header.txt files to preserve metadata to go with your new tiff stack\n",
    "\n",
    "# Reformat the nrrd header\n",
    "nrrd_hdr_reformatted = reformat_nrrd_hdr(header)\n",
    "\n",
    "# Read in the original CT header\n",
    "# TO DO: Change CT_hdr_path to match the Header.txt location from your CT scan recon folder\n",
    "CT_hdr_path = \"/data/THECAC/thecac_ftg_rf_220622/thecac_ftg_rf_220622_2024-09-10_114510/whole_flower/recon\"\n",
    "CT_hdr_fn = \"Header.txt\"\n",
    "CT_hdr_fpath = CT_hdr_path + '/' + CT_hdr_fn\n",
    "CT_hdr = read_CT_hdr(CT_hdr_fpath)\n",
    "\n",
    "# Export the reformatted NRRD header\n",
    "hdr_out = outpath + \"/\" + \"Header_Nrrd.txt\"\n",
    "export_header(nrrd_hdr_reformatted, hdr_out)\n",
    "\n",
    "# Export the CT header\n",
    "hdr_out = outpath + \"/\" + \"Header_CT.txt\"\n",
    "export_header(CT_hdr, hdr_out)"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Zip the tiff stack so it's ready for MorphoSource upload\n",
    "%cd $outpath\n",
