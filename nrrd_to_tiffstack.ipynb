    "zipped_fn = base_fn + '_zipped_stack.zip'\n",
    "unzipped_fn = os.path.basename(outpath)\n",
    "!zip -r $zipped_fn $unzipped_fn\n",
    "\n",
    "print(\"Total folder size after zipping: \")\n",
    "!du -h $zipped_fn"
   ]
